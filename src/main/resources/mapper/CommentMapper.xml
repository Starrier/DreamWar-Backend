<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 将namespace的值设置为DAO类对应的路径 -->
<mapper namespace="org.starrier.dreamwar.comment.repository.CommentDao">
    <!-- 目的：为DAO接口方法提供sql语句配置 -->

    <resultMap id="Comment" type="org.starrier.dreamwar.comment.entity.Comment">
        <result property="id" column="id" />
        <result property="article_id" column="article_id" />
        <result property="comment" column="comment"/>
        <result property="date" column="date" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
    </resultMap>

    <insert id="addComment" parameterType="org.starrier.dreamwar.comment.entity.Comment">
        insert into comment (
            article_id,
            comment,
            date
        )
        VALUES (
            #{article_id},#{comment},#{date,jdbcType=TIMESTAMP}
        )
    </insert>

    <delete id="deleteById" parameterType="org.starrier.dreamwar.comment.entity.Comment">
        delete
        from
            comment
        where
            article_id=#{id}
    </delete>

    <update id="updateComment">
        update comment
        set
            comment.article_id=#{article_id},
            comment.comment=#{comment}
        where
            article.id=#{id}
    </update>

    <select id="showComment" resultType="org.starrier.dreamwar.comment.entity.Comment">
        select *
        FROM
            comment
        WHERE
            id=#{id}
        ORDER BY
            id
        DESC
    </select>

</mapper>